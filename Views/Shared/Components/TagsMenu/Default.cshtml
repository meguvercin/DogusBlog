@model List<Tag>

<div class="card shadow-sm mb-4 border-0">
    <div class="card-header bg-white border-bottom-0">
        <h5 class="mb-0 fw-semibold text-dark">Pop√ºler Etiketler</h5>
    </div>
    <div class="card-body pt-2">
        <ul class="list-inline mb-0 d-flex flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <li class="list-inline-item">
                    <a href="/blogs/tag/@tag.Url"
                       class="badge rounded-pill px-3 py-2 text-white bg-@((tag.Color?.ToString()?.ToLower()) ?? "secondary")"
                       style="font-size: 0.85rem; letter-spacing: 0.5px;">
                        #@tag.Text
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
